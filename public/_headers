# Cloudflare Pages headers
# See: https://developers.cloudflare.com/pages/platform/headers/

# Default caching for all routes - short cache for dynamic content
/*
  Cache-Control: public, max-age=0, must-revalidate

# Static assets with hash in filename can be cached long-term
/_astro/*
  Cache-Control: public, max-age=31536000, immutable

# Images can be cached for a week
/*.webp
  Cache-Control: public, max-age=604800
/*.png
  Cache-Control: public, max-age=604800
/*.jpg
  Cache-Control: public, max-age=604800
/*.svg
  Cache-Control: public, max-age=604800

# Fonts can be cached long-term
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
/*.woff
  Cache-Control: public, max-age=31536000, immutable
