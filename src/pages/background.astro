---
import BaseLayout from '../layouts/BaseLayout.astro';
import TimelineRenderer from '../components/TimelineRenderer.astro';
import avatarPlaceholder from '../assets/images/avatar-placeholder.svg';

// Get view parameter from URL
const url = new URL(Astro.request.url);
const view = (url.searchParams.get('view') as 'timeline' | 'cards' | 'list') || 'timeline';
const density = (url.searchParams.get('density') as 'compact' | 'normal' | 'spacious') || 'normal';
---

<BaseLayout title="Background - Nick Roth" description="Professional background, education, and career journey of Nick Roth">
  <main class="py-20">
    <div class="container mx-auto px-4 max-w-6xl">
      <!-- Hero Section -->
      <div class="text-center mb-16">
        <div class="avatar mb-8">
          <div class="w-32 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
            <img src={avatarPlaceholder.src} width={128} height={128} alt="Nick Roth" loading="lazy" />
          </div>
        </div>
        <h1 class="text-5xl font-bold mb-6">
          PROFESSIONAL
          <br />
          <span class="text-primary">BACKGROUND</span>
        </h1>
        <p class="text-xl opacity-75 max-w-3xl mx-auto">
          From systems engineering to product leadership - a journey of applying systematic thinking to complex challenges.
        </p>
      </div>

      <!-- Timeline -->
      <div class="mb-20">
        <h2 class="text-3xl font-bold text-center mb-12">Career Timeline</h2>
        <TimelineRenderer view={view} density={density} />
      </div>

      <!-- Education -->
      <div class="mb-20">
        <h2 class="text-3xl font-bold text-center mb-12">Education</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="card bg-secondary text-secondary-content shadow-xl">
            <div class="card-body">
              <h3 class="card-title text-xl">Master of Science</h3>
              <p class="text-lg mb-2">Systems Engineering (PMASE Program)</p>
              <p class="mb-4">Georgia Institute of Technology</p>
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                  <strong>Duration:</strong> 2014-2016
                </div>
                <div>
                  <strong>GPA:</strong> 3.8/4.0
                </div>
              </div>
              <div class="mt-4">
                <h4 class="font-semibold mb-2">Key Coursework:</h4>
                <ul class="text-sm space-y-1">
                  <li>• Systems Architecture and Design</li>
                  <li>• Requirements Engineering</li>
                  <li>• Project Management</li>
                  <li>• Systems Integration and Testing</li>
                </ul>
              </div>
            </div>
          </div>

          <div class="card bg-accent text-accent-content shadow-xl">
            <div class="card-body">
              <h3 class="card-title text-xl">Bachelor of Science</h3>
              <p class="text-lg mb-2">Computer Science</p>
              <p class="mb-4">Auburn University</p>
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                  <strong>Duration:</strong> 2008-2012
                </div>
                <div>
                  <strong>GPA:</strong> 3.6/4.0
                </div>
              </div>
              <div class="mt-4">
                <h4 class="font-semibold mb-2">Focus Areas:</h4>
                <ul class="text-sm space-y-1">
                  <li>• Software Engineering</li>
                  <li>• Database Design</li>
                  <li>• Algorithms and Data Structures</li>
                  <li>• Human-Computer Interaction</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Skills Evolution -->
      <div class="mb-20">
        <h2 class="text-3xl font-bold text-center mb-12">Skills Evolution</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div class="card bg-base-200">
            <div class="card-body">
              <h3 class="card-title text-lg text-primary">Systems Thinking</h3>
              <p class="text-sm mb-4">Foundation from engineering background</p>
              <div class="space-y-2">
                <div class="badge badge-outline badge-sm">SysML</div>
                <div class="badge badge-outline badge-sm">BPMN</div>
                <div class="badge badge-outline badge-sm">Architecture Design</div>
                <div class="badge badge-outline badge-sm">Requirements Analysis</div>
              </div>
            </div>
          </div>

          <div class="card bg-base-200">
            <div class="card-body">
              <h3 class="card-title text-lg text-primary">Product Management</h3>
              <p class="text-sm mb-4">Strategic product development</p>
              <div class="space-y-2">
                <div class="badge badge-outline badge-sm">Roadmap Planning</div>
                <div class="badge badge-outline badge-sm">A/B Testing</div>
                <div class="badge badge-outline badge-sm">User Research</div>
                <div class="badge badge-outline badge-sm">Agile</div>
              </div>
            </div>
          </div>

          <div class="card bg-base-200">
            <div class="card-body">
              <h3 class="card-title text-lg text-primary">Technical Leadership</h3>
              <p class="text-sm mb-4">AI, automation, and modern platforms</p>
              <div class="space-y-2">
                <div class="badge badge-outline badge-sm">AI Integration</div>
                <div class="badge badge-outline badge-sm">Automation</div>
                <div class="badge badge-outline badge-sm">Platform Architecture</div>
                <div class="badge badge-outline badge-sm">Team Leadership</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Philosophy -->
      <div class="text-center bg-gradient-to-r from-primary/10 to-secondary/10 p-12 rounded-lg">
        <h2 class="text-3xl font-bold mb-6">Professional Philosophy</h2>
        <blockquote class="text-lg max-w-4xl mx-auto leading-relaxed">
          "The best solutions emerge when systematic thinking meets practical execution. 
          My engineering background provides the framework for breaking down complex problems, 
          while product management experience ensures solutions deliver real business value. 
          This combination enables transforming requirements into measurable outcomes."
        </blockquote>
        <div class="mt-8">
          <a href="/approach" class="btn btn-primary btn-lg mr-4">
            Learn My Approach
          </a>
          <a href="/contact" class="btn btn-outline btn-lg">
            Discuss Your Project
          </a>
        </div>
      </div>
    </div>
  </main>
  
  <script src="../scripts/timeline-deep-linking.js"></script>
</BaseLayout>