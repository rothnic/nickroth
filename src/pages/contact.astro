---
import BaseLayout from '../layouts/BaseLayout.astro';
import { profile } from '../config/profile';
import ContentLayout from '../components/ContentLayout.astro';
import PageHeader from '../components/PageHeader.astro';

// Use centralized email obfuscation from profile
const emailParts = profile.emailParts;
---

<BaseLayout title="Contact - Nick Roth" description="Get in touch with Nick Roth">
  <ContentLayout>
    <PageHeader
      title="Let's Work"
      subtitle="Together"
      description="Open to consulting and fractional roles. Specializing in systematic solutions for complex product and engineering challenges."
    />

    <!-- Content wrapper with narrower max-width -->
    <div class="max-w-4xl mx-auto">
      <!-- Main Content Card - static container, no hover -->
      <div class="solid-card border-2 border-base-300 shadow-brutal rounded-xl p-8 sm:p-12 mb-12">
        <!-- Contact Options Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
          <!-- Primary Contact Methods -->
          <div>
            <h2 class="text-2xl font-bold mb-6 text-primary">Connect With Me</h2>
            
            <div class="space-y-4">
              <!-- LinkedIn -->
              <a 
                href={profile.linkedin} 
                target="_blank" 
                rel="noopener noreferrer"
                class="btn btn-outline w-full h-auto py-4 px-4 justify-start gap-4 normal-case"
              >
                <div class="w-12 h-12 bg-[#0A66C2] rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </div>
                <div class="flex-1 text-left">
                  <span class="font-bold text-lg">LinkedIn</span>
                  <p class="text-sm text-base-content/60 font-normal">Professional networking & updates</p>
                </div>
                <svg class="w-5 h-5 text-base-content/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>

              <!-- GitHub -->
              <a 
                href={profile.github} 
                target="_blank" 
                rel="noopener noreferrer"
                class="btn btn-outline w-full h-auto py-4 px-4 justify-start gap-4 normal-case"
              >
                <div class="w-12 h-12 bg-[#24292f] rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </div>
                <div class="flex-1 text-left">
                  <span class="font-bold text-lg">GitHub</span>
                  <p class="text-sm text-base-content/60 font-normal">Code, projects & contributions</p>
                </div>
                <svg class="w-5 h-5 text-base-content/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>

              <!-- Email - Protected -->
              <button 
                id="reveal-email"
                class="btn btn-outline w-full h-auto py-4 px-4 justify-start gap-4 normal-case text-left"
              >
                <div class="w-12 h-12 bg-primary rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                  </svg>
                </div>
                <div class="flex-1">
                  <span class="font-bold text-lg" id="email-text">Click to reveal email</span>
                  <p class="text-sm text-base-content/60 font-normal">Direct contact</p>
                </div>
                <svg class="w-5 h-5 text-base-content/40" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
              </button>
            </div>
          </div>

          <!-- Location & Availability -->
          <div>
            <h2 class="text-2xl font-bold mb-6 text-primary">Availability</h2>
            
            <div class="space-y-6">
              <!-- Location -->
              <div class="flex items-start gap-4">
                <div class="w-12 h-12 bg-secondary rounded-xl flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                  </svg>
                </div>
                <div>
                  <span class="font-bold text-lg">Huntsville, AL</span>
                  <p class="text-sm text-base-content/60">Central Time (America/Chicago)</p>
                  <p class="text-sm text-base-content/60 mt-1">Available for remote work worldwide</p>
                </div>
              </div>

              <!-- Preferred Contact -->
              <div class="card bg-primary/10 border-l-4 border-primary p-4">
                <p class="text-sm font-medium">
                  <strong>Tip:</strong> For the fastest response, reach out via LinkedIn with a brief description of your project or opportunity.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Services & Rates -->
        <div class="pt-8 border-t-2 border-base-300">
          <h2 class="text-2xl font-bold mb-6 text-primary">Services & Rates</h2>
          
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
            <div class="bg-base-100 border-2 border-base-300 rounded-xl p-6 text-center">
              <div class="text-3xl font-black text-primary mb-2">$200-300</div>
              <div class="text-sm font-bold uppercase tracking-wide text-base-content/60 mb-2">Per Hour</div>
              <div class="text-sm">Strategic Consulting</div>
            </div>
            
            <div class="bg-base-100 border-2 border-base-300 rounded-xl p-6 text-center">
              <div class="text-3xl font-black text-primary mb-2">$8-15k</div>
              <div class="text-sm font-bold uppercase tracking-wide text-base-content/60 mb-2">Per Month</div>
              <div class="text-sm">Fractional Product Management</div>
            </div>
            
            <div class="bg-base-100 border-2 border-base-300 rounded-xl p-6 text-center">
              <div class="text-3xl font-black text-primary mb-2">Custom</div>
              <div class="text-sm font-bold uppercase tracking-wide text-base-content/60 mb-2">By Scope</div>
              <div class="text-sm">Project-Based Work</div>
            </div>
          </div>
        </div>
      </div>

      <!-- CTA -->
      <div class="text-center">
        <p class="text-base-content/60 mb-4">Ready to discuss your project?</p>
        <a 
          href={profile.linkedin} 
          target="_blank" 
          rel="noopener noreferrer"
          class="btn btn-primary btn-lg gap-2"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
          Connect on LinkedIn
        </a>
      </div>
    </div>
  </ContentLayout>

  <script define:vars={{ emailParts }}>
    // Email reveal functionality with protection
    const revealBtn = document.getElementById('reveal-email');
    const emailText = document.getElementById('email-text');
    let revealed = false;
    
    if (revealBtn && emailText) {
      revealBtn.addEventListener('click', () => {
        if (!revealed) {
          // Decode email from parts
          const email = emailParts[0] + '@' + emailParts[1];
          emailText.textContent = email;
          revealed = true;
          
          // Change button to be a mailto link
          revealBtn.onclick = () => {
            window.location.href = 'mailto:' + email;
          };
        } else {
          // Second click opens email
          const email = emailParts[0] + '@' + emailParts[1];
          window.location.href = 'mailto:' + email;
        }
      });
    }
  </script>
</BaseLayout>