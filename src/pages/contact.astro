---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact - Nick Roth" description="Get in touch with Nick Roth">
  <main class="py-20">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="text-center mb-16">
        <h1 class="text-5xl font-bold mb-6">Let's Work Together</h1>
        <p class="text-xl opacity-75 max-w-3xl mx-auto">
          Open to consulting and fractional roles. Specializing in systematic solutions 
          for complex product and engineering challenges.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Information -->
        <div>
          <h2 class="text-3xl font-bold mb-6">Get In Touch</h2>
          <p class="mb-8 text-lg">
            Whether you need strategic product guidance, technical architecture consulting, 
            or help with automation and AI integration, I'd love to discuss how we can work together.
          </p>
          
          <div class="space-y-6 mb-8">
            <div class="flex items-center gap-4">
              <div class="btn btn-circle btn-primary btn-sm">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                </svg>
              </div>
              <div>
                <div class="font-semibold">nick@nickroth.com</div>
                <div class="text-sm opacity-75">Response time: 24-48 hours</div>
              </div>
            </div>
            
            <div class="flex items-center gap-4">
              <div class="btn btn-circle btn-primary btn-sm">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                </svg>
              </div>
              <div>
                <div class="font-semibold">Huntsville, AL</div>
                <div class="text-sm opacity-75">Central Time Zone (America/Chicago)</div>
              </div>
            </div>
            
            <div class="flex items-center gap-4">
              <div class="btn btn-circle btn-primary btn-sm">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </div>
              <div>
                <div class="font-semibold">LinkedIn</div>
                <div class="text-sm opacity-75">Professional networking</div>
              </div>
            </div>
            
            <div class="flex items-center gap-4">
              <div class="btn btn-circle btn-primary btn-sm">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </div>
              <div>
                <div class="font-semibold">GitHub</div>
                <div class="text-sm opacity-75">Code and projects</div>
              </div>
            </div>
          </div>

          <!-- Services & Rates -->
          <div class="card bg-base-200">
            <div class="card-body">
              <h3 class="card-title">Services & Rates</h3>
              <div class="space-y-3">
                <div class="flex justify-between">
                  <span>Consulting</span>
                  <span class="font-semibold">$200-300/hour</span>
                </div>
                <div class="flex justify-between">
                  <span>Fractional Product Management</span>
                  <span class="font-semibold">$8-15k/month</span>
                </div>
                <div class="flex justify-between">
                  <span>Project Work</span>
                  <span class="font-semibold">Variable by scope</span>
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Contact Form -->
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h3 class="card-title text-2xl mb-4">Start a Conversation</h3>
            <form class="space-y-4">
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-semibold">Name</span>
                </label>
                <input type="text" placeholder="Your name" class="input input-bordered" required />
              </div>
              
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-semibold">Email</span>
                </label>
                <input type="email" placeholder="your.email@example.com" class="input input-bordered" required />
              </div>

              <div class="form-control">
                <label class="label">
                  <span class="label-text font-semibold">Project Type</span>
                </label>
                <select class="select select-bordered">
                  <option disabled selected>Select project type</option>
                  <option>Strategic Consulting</option>
                  <option>Technical Architecture</option>
                  <option>Automation & AI Integration</option>
                  <option>Platform Modernization</option>
                  <option>Fractional Product Management</option>
                  <option>Other</option>
                </select>
              </div>
              
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-semibold">Project Details</span>
                </label>
                <textarea class="textarea textarea-bordered h-32" placeholder="Tell me about your project, challenges, and objectives..." required></textarea>
              </div>
              
              <div class="form-control mt-6">
                <button class="btn btn-primary btn-lg" type="submit">Send Message</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>