---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import CapabilityCard from '../components/CapabilityCard.astro';
import { getCollection } from 'astro:content';

const capabilities = await getCollection('capabilities');
const sortedCapabilities = capabilities
  .sort((a, b) => a.data.order - b.data.order);

const work = await getCollection('work');
const featuredWork = work
  .filter(w => w.data.featured)
  .sort((a, b) => {
    const aDate = a.data.endDate || new Date();
    const bDate = b.data.endDate || new Date();
    return bDate.getTime() - aDate.getTime();
  })
  .slice(0, 2);

const notes = await getCollection('notes');
const recentNotes = notes
  .sort((a, b) => new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime())
  .slice(0, 3);
---

<BaseLayout>
  <Hero />
  
  <!-- Capabilities Section -->
  <section class="py-20 bg-base-200">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12">Core Capabilities</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {sortedCapabilities.map((capability) => (
          <CapabilityCard
            title={capability.data.title}
            description={capability.data.description}
            icon={capability.data.icon}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Work Section -->
  <section class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-center mb-12">Featured Work</h2>
      {featuredWork.length > 0 ? (
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 max-w-5xl mx-auto mb-12">
          {featuredWork.map((project) => (
            <div class="card bg-base-100 shadow-xl">
              <div class="card-body">
                <h3 class="card-title text-xl">{project.data.title}</h3>
                <p class="text-sm opacity-75 mb-2">{project.data.company} â€¢ {project.data.role}</p>
                <p class="mb-4">{project.data.description}</p>
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.data.tags.map((tag: string) => (
                    <div class="badge badge-outline badge-sm">{tag}</div>
                  ))}
                </div>
                <div class="card-actions justify-end">
                  <a href={`/work/${project.slug}`} class="btn btn-primary btn-sm">View Details</a>
                </div>
              </div>
            </div>
          ))}
        </div>
      ) : null}
      
      <div class="text-center">
        <a href="/work" class="btn btn-primary btn-lg">View All Work</a>
      </div>
    </div>
  </section>

  <!-- Recent Updates Section -->
  {recentNotes.length > 0 && (
    <section class="py-20 bg-base-200">
      <div class="container mx-auto px-4">
        <h2 class="text-4xl font-bold text-center mb-12">Recent Updates</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 max-w-6xl mx-auto">
          {recentNotes.map((note) => (
            <div class="card bg-base-100 shadow-lg">
              <div class="card-body">
                <h3 class="card-title text-lg">{note.data.title}</h3>
                <p class="text-sm opacity-75 mb-2">
                  {new Date(note.data.publishDate).toLocaleDateString()}
                </p>
                <p class="text-sm mb-3">{note.data.description}</p>
                <div class="flex flex-wrap gap-1">
                  {note.data.tags.slice(0, 3).map((tag: string) => (
                    <div class="badge badge-outline badge-xs">{tag}</div>
                  ))}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>
  )}
</BaseLayout>