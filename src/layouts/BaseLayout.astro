---
import MainNav from '../components/site/MainNav';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { title = 'Nick Roth – Systems-driven product leader', description } = Astro.props as Props;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>
  <body class="bg-background text-foreground">
    <MainNav client:load />
    <main class="relative pt-[90px]">
      <slot />
    </main>
    <footer class="mt-24 border-t-4 border-border bg-secondary-background">
      <div class="mx-auto grid w-full max-w-[var(--container-width)] gap-8 px-5 py-12 md:grid-cols-[1.2fr_1fr]">
        <div class="space-y-4">
          <h2 class="text-2xl font-heading uppercase tracking-tight">Let&rsquo;s build resilient systems together</h2>
          <p class="max-w-xl text-sm font-base text-foreground/75">
            I help growth-stage teams ship platforms that scale &mdash; from product strategy and service design through to the design system and developer experience that keeps your org moving. Drop a note and we&rsquo;ll map the right starting point.
          </p>
          <div class="flex flex-wrap gap-3">
            <a
              href="mailto:hello@nickroth.com"
              class="rounded-base border-2 border-border bg-main px-4 py-2 font-heading text-main-foreground shadow-shadow transition-all hover:translate-x-boxShadowX hover:translate-y-boxShadowY hover:shadow-none"
            >
              hello@nickroth.com
            </a>
            <a
              href="https://www.linkedin.com/in/nickroth"
              class="rounded-base border-2 border-border bg-background px-4 py-2 font-heading text-foreground shadow-shadow transition-all hover:translate-x-boxShadowX hover:translate-y-boxShadowY hover:shadow-none"
              target="_blank"
              rel="noreferrer"
            >
              Connect on LinkedIn
            </a>
          </div>
        </div>
        <div class="grid gap-3 text-sm font-base text-foreground/70">
          <div>
            <span class="font-heading text-xs uppercase tracking-wide text-foreground">Current focus</span>
            <p>Design systems, product foundations, and AI-enabled workflows.</p>
          </div>
          <div>
            <span class="font-heading text-xs uppercase tracking-wide text-foreground">Available for</span>
            <p>Fractional product leadership, systems architecture, and critical launch programs.</p>
          </div>
          <div class="text-xs text-foreground/50">
            © {new Date().getFullYear()} Nick Roth. All rights reserved.
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
