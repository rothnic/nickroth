---
import avatarPlaceholder from '../assets/images/avatar-placeholder.svg';
import { Button } from '@/components/retroui/Button';
import { Badge } from '@/components/retroui/Badge';
import { Card } from '@/components/retroui/Card';
---

<div class="hero min-h-screen bg-gradient-to-br from-primary/10 to-secondary/10">
  <div class="hero-content text-center">
    <div class="max-w-4xl">
      <Card className="p-8 mb-8">
        <div class="flex flex-col md:flex-row items-center gap-8">
          <div class="order-2 md:order-1 flex-1 text-left">
            <h1 class="text-5xl font-bold mb-2">Nick Roth</h1>
            <p class="text-2xl mb-4 text-base-content/80">Product & Systems Director</p>
            <p class="text-lg mb-8 leading-relaxed">
              Transforming complex requirements into systematic solutions through objective-first discovery and automation-driven execution.
            </p>
            
            <!-- Key Metrics -->
            <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-8">
              <Badge variant="surface" size="lg" className="flex flex-col items-center p-4">
                <div class="text-2xl font-bold text-primary">400%</div>
                <div class="text-sm">YoY blog revenue increase</div>
              </Badge>
              <Badge variant="surface" size="lg" className="flex flex-col items-center p-4">
                <div class="text-2xl font-bold text-primary">$35k</div>
                <div class="text-sm">monthly cost savings</div>
              </Badge>
              <Badge variant="surface" size="lg" className="flex flex-col items-center p-4">
                <div class="text-2xl font-bold text-primary">150%</div>
                <div class="text-sm">organic user growth</div>
              </Badge>
              <Badge variant="surface" size="lg" className="flex flex-col items-center p-4">
                <div class="text-2xl font-bold text-primary">125%</div>
                <div class="text-sm">mobile revenue growth</div>
              </Badge>
            </div>

            <div class="flex gap-4 justify-center md:justify-start flex-wrap">
              <Button variant="default" size="lg" client:load>
                <a href="/work" class="no-underline text-inherit">View My Work</a>
              </Button>
              <Button variant="outline" size="lg" client:load>
                <a href="/contact" class="no-underline text-inherit">Get In Touch</a>
              </Button>
            </div>
          </div>
          
          <div class="order-1 md:order-2">
            <div class="avatar">
              <div class="w-32 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
                <img src={avatarPlaceholder.src} width={128} height={128} alt="Nick Roth" loading="lazy" />
              </div>
            </div>
          </div>
        </div>
        
        <div class="mt-8">
          <p class="text-sm text-base-content/60">
            <span class="inline-block mr-4">üìç Huntsville, AL</span>
            <span class="inline-block">‚úÖ Open to consulting and fractional roles</span>
          </p>
        </div>
      </Card>
    </div>
  </div>
</div>