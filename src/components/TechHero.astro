---
/**
 * TechHero - A modular component for tech-branded hero images
 * Uses SVG logos + HTML text for infinite scalability and sharpness
 * 
 * Props:
 * - tech: The technology name (astro, datocms, etc.)
 * - feature: The feature text to display
 * - variant?: 'full' | 'compact' (default: 'full')
 */

export interface Props {
  tech: 'astro' | 'datocms' | 'react' | 'generic';
  feature: string;
  variant?: 'full' | 'compact';
}

const { tech, feature, variant = 'full' } = Astro.props;

// Tech configurations
const techConfig = {
  astro: {
    name: 'Astro',
    bgColor: 'bg-[#7C3AED]', // Astro purple
    textColor: 'text-white',
    logo: 'astro',
  },
  datocms: {
    name: 'DatoCMS',
    bgColor: 'bg-[#FF593D]', // DatoCMS coral
    textColor: 'text-white',
    logo: 'datocms',
  },
  react: {
    name: 'React',
    bgColor: 'bg-[#61DAFB]', // React cyan
    textColor: 'text-[#20232A]',
    logo: 'react',
  },
  generic: {
    name: '',
    bgColor: 'bg-base-300',
    textColor: 'text-base-content',
    logo: null,
  },
};

const config = techConfig[tech] || techConfig.generic;
const isCompact = variant === 'compact';
