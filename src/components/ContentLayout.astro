---
/**
 * ContentLayout - Wraps page content in the standard main/container structure.
 * 
 * The outer container always uses max-w-6xl for consistent header positioning.
 * Content can control its own max-width as needed.
 */

export interface Props {
  /** Custom padding class (default: "py-20") */
  padding?: string;
}

const { 
  padding = "py-20"
} = Astro.props;
---

<main class={padding}>
  <div class="container mx-auto px-2 sm:px-4 max-w-6xl">
    <slot />
  </div>
</main>
