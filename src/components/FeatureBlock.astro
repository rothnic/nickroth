---
// FeatureBlock - A lightweight TL;DR/feature highlight component for MDX
// "Soft brutal" design: accent lines, hairline borders, minimal chrome

export interface Feature {
	title: string;
	description: string;
}

export interface Props {
	title?: string;
	features: Feature[];
}

const { title = "Key Principles", features } = Astro.props as Props;
---

<section class="feature-block my-6">
	<p class="text-xs tracking-widest uppercase opacity-50 mb-3 font-mono">
		{title}
	</p>
	
	<div class="grid gap-3 md:grid-cols-3">
		{features.map((feature, i) => (
			<div class="feature-card border border-base-300 bg-base-100 p-3 shadow-brutal-sm">
				<div class={`h-0.5 w-8 mb-2 ${
					i === 0 ? 'bg-primary' : 
					i === 1 ? 'bg-secondary' : 
					'bg-accent'
				}`}></div>
				<h4 class="text-sm font-semibold tracking-wide mb-0.5">
					{feature.title}
				</h4>
				<p class="text-sm leading-relaxed opacity-70">
					{feature.description}
				</p>
			</div>
		))}
	</div>
</section>