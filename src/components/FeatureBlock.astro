---
// FeatureBlock - A lightweight TL;DR/feature highlight component for MDX
// "Soft brutal" design: accent lines, hairline borders, minimal chrome
// Blends with prose content instead of competing with it

export interface Feature {
	icon?: string;
	title: string;
	description: string;
}

export interface Props {
	title?: string;
	features: Feature[];
}

const { title = "Key Principles", features } = Astro.props as Props;
---

<section class="feature-block my-10">
	<p class="text-xs tracking-widest uppercase opacity-60 mb-4 font-mono">
		{title}
	</p>
	
	<div class="grid gap-4 md:grid-cols-3">
		{features.map((feature, i) => (
			<div class="feature-card border border-base-300 bg-base-100 p-4 shadow-[3px_3px_0_0_rgba(0,0,0,0.10)]">
				<div class={`h-1 w-10 mb-3 rounded ${
					i === 0 ? 'bg-primary' : 
					i === 1 ? 'bg-secondary' : 
					'bg-accent'
				}`}></div>
				<h4 class="text-sm font-semibold tracking-wide mb-1">
					{feature.title}
				</h4>
				<p class="text-sm leading-relaxed opacity-75">
					{feature.description}
				</p>
			</div>
		))}
	</div>
</section>

<style>
	.feature-card {
		min-height: 80px;
	}
</style>